
{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "distro",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "auth": {
      "host": "localhost",
      "port": 9099
