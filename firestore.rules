
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isNotAnonymous() {
      return isAuthenticated() && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCreatingOwnContent() {
      return request.resource.data.userId == request.auth.uid;
    }

    // --- Collection Rules ---

    // Recommendations can be read by anyone, but only created by authenticated users for themselves.
    match /recommendations/{recommendationId} {
      allow get, list: if true;
      allow create: if isAuthenticated() && isCreatingOwnContent();
      allow update: if isOwner(resource.data.userId); // Allow update only by the owner
      allow delete: if false; // Disallow deletion for now
    }

    // Users can only manage their own document.
    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if isOwner(userId);
      allow list, delete: if false; // Nobody can list all users or delete accounts from client
    }

    // Chat is only for authenticated, non-anonymous users.
    match /chatMessages/{messageId} {
      allow list, create: if isNotAnonymous();
      allow get, update, delete: if false; // Chat history is immutable
    }
    
    // Summarized feedback logs can be read and created by any authenticated user.
    match /summarizedFeedbackLogs/{logId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if false; // Logs are immutable
    }
  }
}
